<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="1.6.0" client="site" method="upgrade">
  	<name>Qlue Accordion</name>
	<creationDate>15/03/2010</creationDate>
  	<author>Aaron Harding</author>
	<authorEmail>info@qlue.info</authorEmail>
	<authorUrl>Qlue.co.uk</authorUrl>
	<copyright>(C) 2010 Qlue.co.uk</copyright>
 	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<version>1.6.5</version>
  	<description>MOD_QACCORDION_XML_DESCRIPTION</description>
  	<files>
	    <filename>mod_qaccordion.xml</filename>
	    <filename module="mod_qaccordion">mod_qaccordion.php</filename>
	    <filename>index.html</filename>
	    <filename>helper.php</filename>
	    <folder>tmpl</folder>
	    <folder>assets</folder>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_qaccordion.ini</language>
		<language tag="en-GB">en-GB.mod_qaccordion.sys.ini</language>
	</languages>
	<config>
	    <fields name="params">
	      <fieldset name="basic">
		   <field name="categoryId" type="category" extension="com_content" default="" label="CATEGORY_LABEL" description="CATEGORY_DESC" />	
		   <field name="orderBy" type="list" default="" label="ORDER_LABEL" description="ORDER_DESC" >
	          <option value="article">ORDER_OPTION_1</option>
			      <option value="alpha">ORDER_OPTION_2</option>
	    		  <option value="modified">ORDER_OPTION_3</option>
			      <option value="newDate">ORDER_OPTION_4</option>
			      <option value="oldDate">ORDER_OPTION_5</option>
	       </field>
		   <field name="countItem" type="text" default="5" label="COUNT_LABEL" description="COUNT_DESC" />
	  	   <field name="arrayId" type="text" default="0" label="INDEX_LABEL" description="INDEX_DESC" />
		   <field name="readMore" type="radio" default="1" label="READ_MORE_LABEL" description="READ_MORE_DESC" >
	         <option value="0" >READ_MORE_OPTION_1</option>
	     	 <option value="1" >READ_MORE_OPTION_2</option>
		   </field>
		   <field name="hover" type="radio" default="0" label="HOVER_LABEL" description="HOVER_DESC" >
	         <option value="0" >HOVER_OPTION_1</option>
			 <option value="1" >HOVER_OPTION_2</option>
		   </field>	
		   <field name="alwaysHide" type="radio" default="0" label="CLOSE_LABEL" description="CLOSE_DESC" >
	         <option value="0" >CLOSE_OPTION_1</option>
		     <option value="1" >CLOSE_OPTION_2</option>
	       </field> 
		   <field name="opacity" type="radio" default="0" label="OPACITY_LABEL" description="OPACITY_DESC" >
	         <option value="0" >OPACITY_OPTION_1</option>
			 <option value="1" >OPACITY_OPTION_2</option>
		   </field>
		   <field name="moduleclass_sfx" type="text" default="" label="MODULE_LABEL" description="MODULE_DESC" />
	      </fieldset>
	    </fields>
	</config>
</extension>