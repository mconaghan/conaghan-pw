<files>
<filename>index.php</filename>
<filename>templateDetails.xml</filename>
<filename>template_thumbnail.png</filename>
<filename>mods.php</filename>
<filename>thumb.png</filename>
<folder>images</folder>
<folder>css</folder>
<folder>js</folder>
</files>

<positions>
<position>breadcrumbs</position>
<position>top</position>
<position>left</position>
<position>right</position>
<position>above1</position>
<position>above2</position>
<position>above3</position>
<position>user1</position>
<position>user2</position>
<position>footer</position>
<position>debug</position>
</positions>

<config>
	<fields name="params">
		<fieldset name="basic">
<field name="totalwidth" type="text" default="960px" label="Overall width" description="Define overall site width in px."></field>
<field name="bgVariation" type="text" default="#ffffff" label="Background Color" size="30" description="Background color"></field>
<field name="colorVariation" type="text" default="#000000" label="Text Color" size="30" description="Text color"></field>
<field name="styleVariation" type="list" default="style1" label="Highlight Color" description="Highlight color to use for the template">
<option value="style1">Style 1</option>
<option value="style2">Style 2</option>
<option value="style3">Style 3</option>
<option value="style4">Style 4</option>
<option value="style5">Style 5</option>
<option value="style6">Style 6</option>
<option value="style7">Style 7</option>
</field>

<field name="fontVariation" type="list" default="Junction_400.font.js" label="Font" description="Font to use for the template">
<option value="Marketing_Script_400.font.js">Marketing Script</option>
<option value="Fertigo_Pro_400.font.js">Fertigo</option>
<option value="Daniel_400.font.js">Daniel</option>
<option value="Yanone_Kaffeesatz_Regular_400.font.js">Kaffeesatz</option>
<option value="Junction_400.font.js">Junction</option>
<option value="ChunkFive_400.font.js">Chunk Five</option>
<option value="Delicious_500.font.js">Delicious</option>
<option value="Xenophone_400.font.js">Xenophone</option>
<option value="WC_Roughtrad_400.font.js">WC Roughtrad</option>
<option value="Snickles_400.font.js">Snickles</option>
</field>

<field name="headline" type="text" default="{re}fresh" label="Site Title" size="30" description="The site title or logo"></field>
<field name="alt" type="text" default="My website" label="Alt Text" size="30" description="The logo title/alt text"></field>
<field name="enableIe6warn" type="radio" default="0" label="IE6 Warning" description="Enable/Disable IE6 Warning">
<option value="1">Enabled</option>
<option value="0">Disabled</option>
</field>
	</fieldset>
	</fields>		
</config>
</install>
